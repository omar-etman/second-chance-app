generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  firstName String?
  lastName  String?
  email     String     @unique
  password  String?    
  address   String?
  country   String?
  image     String?
  city      String?
  phone     String?
  id        String     @id
  donations Donation[]
  rescues   Rescue[]
}

model Species {
  name    String
  id      Int      @id @default(autoincrement())
  animals Animal[]
}

model Animal {
  name         String?
  breed        String?
  story        String
  traits       String
  requirements String
  gender       Gender?
  id           Int       @id @default(autoincrement())
  speciesId    Int
  dateOfBirth  DateTime?
  species      Species   @relation(fields: [speciesId], references: [id])
  images       Image[]
  Rescue       Rescue[]
}

model Image {
  image    String?
  id       Int     @id @default(autoincrement())
  animalId Int
  animal   Animal  @relation(fields: [animalId], references: [id])
}

model Rescue {
  id         Int      @id @default(autoincrement())
  animalId   Int
  userId     String
  rescueDate DateTime @default(now())
  Animal     Animal   @relation(fields: [animalId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Donation {
  amount       Int
  appCredit    Int
  donationDate DateTime @default(now())
  id           Int      @id @default(autoincrement())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
}

enum Gender {
  male
  female
}
